## <%= @project %>-<%= @type %>

export DB_HOST='localhost'
export DB_USER='<%= @project %>_<%= @environment %>'
export DB_PASS='<%= @mysql_pass %>'
export DB_NAME='<%= @project %>_<%= @type %>_<%= @environment %>'

## TYPO3 Settings
export TYPO3_SITENAME='<%= @project %> - <%= @environment %>'

#######################
# YAD specific settings

export YAD_DEPLOY=simple.sh
export YAD_RELEASE_FOLDER=/var/www/<%= @domain %>/<%= @environment %>
export YAD_INSTALL_SCRIPT=setup/install.sh

# package containing at least an install.sh install script
# supports tgz and zip packages
export YAD_PACKAGE=<%= @yad_package %>
export YAD_PACKAGE_USERNAME=<%= @yad_user %>
export YAD_PACKAGE_PASSWORD=<%= @yad_pass %>
